modules = ["nodejs-20", "web", "nix"]
run = "npm run dev"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npm run dev"]

[workflows]
runButton = "Dev Mobile"

[[workflows.workflow]]
name = "Dev Mobile"
author = 42201938
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Build for Mobile"
author = 42201938
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build:mobile"

[[workflows.workflow]]
name = "Build Android APK"
author = 42201938
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build:mobile"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx cap add android"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx cap sync"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Now open Android Studio with 'npx cap open android' to build your APK\""

[[workflows.workflow]]
name = "Build for Samsung A02s"
author = 42201938
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build:mobile"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx cap sync"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Android build optimized for Samsung A02s - open Android Studio to build APK\""

[[ports]]
localPort = 8080
externalPort = 80
